{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "moduleResolution": "node",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "dist/"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": [
    "node_modules/@types"
  ]
}